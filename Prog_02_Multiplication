import math

#Program 1 multiplication of numbers without the sign of multiplication
answer = 't'
while(answer=='t'):
        print()
        print ("Program 1: multiplication of numbers without the sign of multiplication")
        print()
        a=int(input("Write first number a="))
        b=int(input("Write second number b="))

        multiplication=0
        i=1
        n=b
        while(i<=n):
            multiplication+=a
            i+=1

        print("Multiplication of number a=" ,a, " and b=" ,b, "is mp=" ,multiplication)
    
        answer=input("Do you want to repeat the program? (Y/N) ")

input("ENTER - to end program")          
