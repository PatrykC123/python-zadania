import math

#Program 1 mnożenie liczb bez znaku mnożenia

odp = 't'
while(odp=='t'):
        print()
        print ("Program 1: mnożenie liczb bez znaku mnożenia")
        print()
        a=int(input("Podaj pierwszą liczbę a="))
        b=int(input("Podaj drugą liczbę b="))

        il=0
        i=1
        n=b
        while(i<=n):
            il+=a
            i+=1

        print("Iloczyn liczb a=" ,a, " i b=" ,b, "wynosi il=" ,il)
    
        odp=input("Chcesz powtórzyć program? (T/N) ")

input("ENTER - aby zakończyć")          
