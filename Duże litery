#Program 2  wyświetlanie tylko dużych znaków

odp='t'
while(odp=='t'):
            print()
            print ("Program 2:  wyświetlanie tylko dużych znaków")
            print()

            wyraz=str(input("Wpisz jakiś wyraz: "))
            print(wyraz.upper())
            print()
            zdanie=str(input("Wpisz tu jakieś zdanie: "))
            print(zdanie.upper())
            print()
            odp=input("Chcesz powtórzyć program? (T/N) ")
            
input("ENTER - aby zakończyć")
